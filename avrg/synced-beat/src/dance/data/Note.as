package dance.data {

public class Note
{
    public static const TYPE_TAP :int = 1;
    public static const TYPE_HOLD_BEGIN :int = 2;
    public static const TYPE_HOLD_END :int = 3;
    public static const TYPE_MINE :int = 4; // Not currently supported

    public static const PAD_LEFT :int = 0;
    public static const PAD_DOWN :int = 1;
    public static const PAD_UP :int = 2;
    public static const PAD_RIGHT :int = 3;

    public var type :int;
    public var pad :int;

    public function Note (type :int, pad :int)
    {
        this.type = type;
        this.pad = pad;
    }
}

}
